<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/card_bg"
    android:layout_height="wrap_content"
    android:layout_width="350dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data"
            android:textColor="?attr/headerText"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/brand_addVehicle_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Marka"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textColor="?attr/contentText"
                android:textColorHint="?attr/contentText"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="?attr/dividerText"/>
            <EditText
                android:id="@+id/model_addVehicle_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Model"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textColor="?attr/contentText"
                android:textColorHint="?attr/contentText"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="?attr/dividerText"/>

            <ImageButton
                android:id="@+id/add_vehicle_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/oval_button"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:src="@drawable/done_icon_24dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>