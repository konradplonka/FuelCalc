<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/card_bg">

<LinearLayout
    android:id="@+id/set_station_linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_station"
        android:textColor="?attr/headerText"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:id="@+id/set_station_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </RadioGroup>

    <ImageButton
        android:id="@+id/set_station_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_button"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:src="@drawable/done_icon_24dp"
        android:clickable="true" />
</LinearLayout>
</RelativeLayout>